{
  "branches": [
    "master",
    "main"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@google/semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "countMatches": true,
            "files": [
              "server/Cargo.toml"
            ],
            "from": "version = \"[0-9.]+\"$",
            "to": "version = \"${nextRelease.version}\"",
            "results": [
              {
                "file": "server/Cargo.toml",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ]
          },
          {
            "countMatches": true,
            "files": [
              "node-lib/package.json"
            ],
            "from": "\"version\": \"[0-9.]+\",",
            "to": "\"version\": \"${nextRelease.version}\",",
            "results": [
              {
                "file": "node-lib/package.json",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ]
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "server/Cargo.toml",
          "node-lib/package.json"
        ]
      }
    ],
    [
      "@semantic-release/github",
      {
        "path": "semantic-release",
        "name": "timo-reymann/auth0-user-gatekeeper"
      }
    ]
  ],
  "tagFormat": "${version}"
}