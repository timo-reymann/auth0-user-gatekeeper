{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "token": {
      "type": "string"
    },
    "allowed_domains": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([a-zA-Z0-9-]+\\.)+[a-zA-Z]{2,}$"
      }
    },
    "allowed_mails": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "email"
      }
    }
  },
  "required": [
    "token"
  ]
}
